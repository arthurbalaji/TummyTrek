# Build stage
FROM maven:3.9.4-openjdk-17 AS build
WORKDIR /app
COPY pom.xml .
COPY src ./src
RUN mvn clean package -DskipTests

# Runtime stage
FROM openjdk:17-jdk-slim
WORKDIR /app
COPY --from=build /app/target/tummytrek-backend-1.0.0.jar app.jar

# Create non-root user
RUN groupadd -r tummytrek && useradd -r -g tummytrek tummytrek
RUN chown -R tummytrek:tummytrek /app
USER tummytrek

# Expose port
EXPOSE 8080

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=60s --retries=3 \
    CMD curl -f http://localhost:8080/api/auth/health || exit 1

# Run application
ENTRYPOINT ["java", "-jar", "app.jar"]
